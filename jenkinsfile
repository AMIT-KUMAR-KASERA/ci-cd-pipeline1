pipeline {
    agent any

    tools {
        nodejs "Node"  // Ensure you have configured NodeJS tool in Jenkins global settings
    }
environment {
        DOCKER_IMAGE = "amitkasera2001/ci-cd-pipeline2"
    }

    stages {
       
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                // Add your test command here, if available
                sh 'echo "No tests available"'
            }
        }
 stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t amitkasera2001/ci-cd-pipeline2 .'
                }
            }
        }
stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'Dockerhub') {
                        sh 'docker push amitkasera2001/ci-cd-pipeline-sample'
                    }
                }
            }
}
        stage('Run') {
            steps {
                sh 'node index.js'
            }
        }
    }
}
